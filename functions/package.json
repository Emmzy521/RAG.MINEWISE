{
  "name": "@minewise-ai/functions",
  "version": "1.0.0",
  "description": "Firebase Functions backend for Minewise AI",
  "main": "lib/index.js",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --platform=node --format=cjs --outfile=lib/index.js --external:firebase-functions --external:firebase-functions/* --external:firebase-admin --external:firebase-admin/* --target=node20",
    "build:dev": "tsc",
    "dev": "tsx watch --tsconfig tsconfig.json src/server-dev.ts",
    "server": "node dist/server-dev.js",
    "server:prod": "node dist/server.js",
    "clean": "rm -rf dist lib",
    "type-check": "tsc --noEmit",
    "lint": "npx eslint src --ext .ts",
    "serve": "firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions"
  },
  "dependencies": {
    "@minewise-ai/rag-core": "file:../packages/rag-core",
    "@trpc/server": "^10.45.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.11",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "20"
  }
}
